                                )
                            
                            with col_b:
                                rifa_final = st.number_input(
                                    "Rifa Final",
                                    min_value=block['numero_inicial'],
                                    max_value=block['numero_final'],
                                    value=block['numero_final'],
                                    help="√öltima rifa a atribuir"
                                )
                            
                            # Calcular quantidade e pre√ßo proporcional
                            quantidade_rifas = rifa_final - rifa_inicial + 1
                            total_rifas_bloco = block['numero_final'] - block['numero_inicial'] + 1
                            preco_proporcional = (float(block.get('preco_bloco', 0)) / total_rifas_bloco) * quantidade_rifas
                            
                            st.info(f"üìä **{quantidade_rifas} rifas** ser√£o atribu√≠das (pre√ßo estimado: {preco_proporcional:.2f} ‚Ç¨)")
                            
                            # Selecionar escuteiro
                            all_escuteiros = [e['nome'] for e in escuteiros_response.data]
                            
                            selected_escuteiro_name = st.selectbox(
                                "2Ô∏è‚É£ Atribuir a Escuteiro",
                                options=all_escuteiros,
                                help="Escuteiro que receber√° estas rifas"
                            )
                            
                            st.warning("‚ö†Ô∏è **Aten√ß√£o:** Esta funcionalidade cria uma **venda direta** em vez de atribuir o bloco. O bloco permanecer√° dispon√≠vel para outras rifas.")
                            
                            submitted = st.form_submit_button("üíæ Criar Venda", type="primary", use_container_width=True)
                            
                            if submitted:
                                if rifa_inicial > rifa_final:
                                    st.error("‚ùå Rifa inicial n√£o pode ser maior que rifa final!")
                                else:
                                    try:
                                        # Encontrar escuteiro ID
                                        escuteiro_id = None
                                        for e in escuteiros_response.data:
                                            if e['nome'] == selected_escuteiro_name:
                                                escuteiro_id = e['id']
                                                break
                                        
                                        if escuteiro_id:
                                            # Criar venda direta
                                            from datetime import datetime
                                            venda_data = {
                                                "bloco_id": block['id'],
                                                "escuteiro_id": escuteiro_id,
                                                "quantidade": quantidade_rifas,
                                                "valor_total": preco_proporcional,
                                                "data_venda": datetime.now().isoformat(),
                                                "observacoes": f"Rifas individuais: {rifa_inicial}-{rifa_final}"
                                            }
                                            
                                            response = supabase.table('vendas').insert(venda_data).execute()
                                            
                                            if response.data:
                                                st.success(f"‚úÖ Venda criada com sucesso! Rifas {rifa_inicial}-{rifa_final} atribu√≠das a **{selected_escuteiro_name}**")
                                                st.info("üí° Esta venda aparecer√° na p√°gina 'Vendas'. O bloco permanece dispon√≠vel.")
                                                st.rerun()
                                            else:
                                                st.error("Erro ao criar venda.")
                                        else:
                                            st.error("Erro ao encontrar escuteiro.")
                                    
                                    except Exception as e:
                                        st.error(f"Erro ao criar venda: {str(e)}")
                
                else:
                    # ===== ATRIBUI√á√ÉO POR IRM√ÉOS =====
                    st.markdown("### Atribui√ß√£o por Irm√£os")
                    st.info("üöß Funcionalidade em desenvolvimento")
        else:
            st.info("üì≠ Nenhum bloco dispon√≠vel nesta campanha. Crie blocos na p√°gina 'Campanhas'.")
    
